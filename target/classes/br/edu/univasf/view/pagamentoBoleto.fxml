<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15" style="-fx-padding: 20; -fx-background-color: #2b2b2b;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.univasf.controller.BoletoController">
    <!-- HBox para o botão "Voltar" -->
    <HBox alignment="TOP_LEFT" prefHeight="30.0" prefWidth="700.0">
        <Button fx:id="voltarButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="61.0" style="-fx-background-radius: 10; -fx-background-color: #1f8fe8;" text="Voltar" textFill="WHITE">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </HBox>

    <!-- Título da tela -->
    <Label prefHeight="30.0" prefWidth="205.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #e0e0e0;" text="Pagamento via Boleto" />

    <!-- Campos para Boleto -->
    <Label style="-fx-text-fill: #e0e0e0;" text="Número do Boleto:" />
    <TextField fx:id="numeroBoletoField" style="-fx-background-color: #383838; -fx-text-fill: white; -fx-border-color: #4e4e4e; -fx-border-width: 1px;" />

    <Label style="-fx-text-fill: #e0e0e0;" text="CPF do Titular:" />
    <TextField fx:id="cpfBoletoField" style="-fx-background-color: #383838; -fx-text-fill: white; -fx-border-color: #4e4e4e; -fx-border-width: 1px;" />

    <!-- Botão para Confirmar Pagamento -->
    <HBox alignment="CENTER" prefHeight="58.0" prefWidth="478.0">
        <children>
            <Button fx:id="confirmarBoletoButton" contentDisplay="CENTER" prefHeight="30.0" prefWidth="163.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px;" text="Confirmar Pagamento" />
        </children>
    </HBox>
</VBox>
