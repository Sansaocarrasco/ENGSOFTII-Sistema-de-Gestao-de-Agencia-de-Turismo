<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #2b2b2b;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.controller.RelatorioReservaController">

    <!-- Título da Tela -->
    <Label layoutX="300.0" layoutY="20.0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Gerar Relatório" />

    <!-- Tabela de Informações -->
    <Label layoutX="20.0" layoutY="60.0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Informações dos Clientes e Pacotes" />
    <TableView fx:id="tableRelatorio" layoutX="20.0" layoutY="90.0" prefHeight="350.0" prefWidth="760.0">
        <columns>
            <TableColumn prefWidth="150.0" text="Nome do Cliente" />
            <TableColumn prefWidth="150.0" text="CPF" />
            <TableColumn prefWidth="150.0" text="Email" />
            <TableColumn prefWidth="150.0" text="Telefone" />
            <TableColumn prefWidth="150.0" text="Nome do Pacote" />
            <TableColumn prefWidth="150.0" text="Destino" />
            <TableColumn prefWidth="100.0" text="Preço" />
            <TableColumn prefWidth="100.0" text="Vagas Ocupadas" />
        </columns>
    </TableView>

    <!-- Botões -->
    <Button fx:id="carregarDadosButton" layoutX="20.0" layoutY="460.0" prefWidth="150.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Carregar Dados" />
    <Button fx:id="gerarRelatorioButton" layoutX="200.0" layoutY="460.0" prefWidth="150.0" style="-fx-background-color: #28a745; -fx-text-fill: white;" text="Gerar Relatório" />
</AnchorPane>
