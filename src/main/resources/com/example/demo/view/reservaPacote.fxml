<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="612.0" style="-fx-background-color: #2b2b2b;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.ReservaPacoteController">

    <content>
        <GridPane alignment="CENTER" hgap="20" maxHeight="Infinity" maxWidth="Infinity" prefHeight="603.0" prefWidth="597.0" style="-fx-background-color: #2b2b2b;" vgap="20">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Informações do Pacote -->
            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Informações do Pacote:" GridPane.columnSpan="2" GridPane.rowIndex="0" />
            <Label style="-fx-text-fill: white;" text="Nome do Pacote" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nomePacoteTextField" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: black;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-text-fill: white;" text="Destino" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="destinoPacoteTextField" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: black;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-text-fill: white;" text="Data de Início" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker fx:id="dataInicioPacotePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label style="-fx-text-fill: white;" text="Data de Fim" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <DatePicker fx:id="dataFimPacotePicker" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label style="-fx-text-fill: white;" text="Preço" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="precoPacoteTextField" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: black;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <!-- Informações do Cliente -->
            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Informações do Cliente :" GridPane.columnSpan="2" GridPane.rowIndex="6" />

            <Label style="-fx-text-fill: white;" text="Nome Completo" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <TextField fx:id="nomeClienteTextField" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: black;" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <Label style="-fx-text-fill: white;" text="E-mail" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField fx:id="emailClienteTextField" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: black;" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <Label style="-fx-text-fill: white;" text="Telefone" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <TextField fx:id="telefoneClienteTextField" prefWidth="200" style="-fx-background-color: white; -fx-text-fill: black;" GridPane.columnIndex="1" GridPane.rowIndex="9" />

            <!-- Detalhes da Reserva -->
            <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Detalhes da Reserva:" GridPane.columnSpan="2" GridPane.rowIndex="10" />

            <Label style="-fx-text-fill: white;" text="Data da Reserva" GridPane.columnIndex="0" GridPane.rowIndex="11" />
            <DatePicker fx:id="dataReservaPicker" GridPane.columnIndex="1" GridPane.rowIndex="11" />

            <!-- Ações -->
            <Button fx:id="reservaPacoteButton" prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Confirmar Reserva" GridPane.columnSpan="2" GridPane.rowIndex="12" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
</ScrollPane>
